<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.csa.ChatClient.ChatroomController">
   <children>
      <Label fx:id="lblWelcome" layoutX="14.0" layoutY="14.0" text="Welcome!">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <ScrollPane hbarPolicy="NEVER" layoutX="14.0" layoutY="41.0" prefHeight="403.0" prefWidth="465.0">
         <content>
            <TextArea fx:id="txtChatArea" editable="false" prefHeight="403.0" prefWidth="463.0">
               <font>
                  <Font size="14.0" />
               </font>
            </TextArea>
         </content>
      </ScrollPane>
      <TextField fx:id="txtMessageField" layoutX="14.0" layoutY="456.0" prefHeight="30.0" prefWidth="406.0">
         <font>
            <Font size="14.0" />
         </font>
      </TextField>
      <Button fx:id="btnSend" layoutX="428.0" layoutY="456.0" mnemonicParsing="false" onAction="#sendMessage" text="Send">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Hyperlink fx:id="btnLogout" layoutX="540.0" layoutY="16.0" onAction="#Logout" text="Logout" />
      <ListView fx:id="lstUserList" layoutX="486.0" layoutY="41.0" prefHeight="447.0" prefWidth="104.0" />
   </children>
</AnchorPane>
